<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.joselm.asteroides">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AcercaDe"
            android:label="Acerca de Asteroides"
            android:theme="@android:style/Theme.Dialog"/>
        <activity android:name=".Preferencias"
            android:label="Preferencias Asteroides"
            android:theme="@android:style/Animation.Activity"/>
        <activity android:name=".Puntuaciones"
            android:label="Puntuaciones del Juego"
            android:theme="@android:style/Animation.Activity"/>
    </application>

</manifest>